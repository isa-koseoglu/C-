@model EchoposCRUD.Models.Product

@{
    ViewData["Title"] = "Product";
}
<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Created" autocomplete="off">
    <div class="form-group">
        <input type="hidden" asp-for="ID" />
        <label >Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="Enter Product Name">
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label>Product Code</label>
                <input type="text" asp-for="ProductCode" class="form-control" placeholder="Enter Product Code">
            </div>
            <div class="col-md-4">
                <label>Product KDV</label>
                <input type="number" asp-for="ProductKdv" class="form-control" placeholder="Enter Product KDV">
            </div>
            <div class="col-md-4">
                <label>Product Price</label>
                <input type="number" asp-for="ProductPrice" class="form-control" placeholder="Enter Product Price">
            </div>
        </div>
    </div>
    <div class="col-auto my-1">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox" id="autoActived">
            <label class="form-check-label"  for="autoActived">
                Is Active
            </label>
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-4">
            @if (Model.ID == 0)
            {
                <button type="submit" class="btn btn-primary">Create</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary">Update</button>
            }
        </div>
    </div>
    

</form>
